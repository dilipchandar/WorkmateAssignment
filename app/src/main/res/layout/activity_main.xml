<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mainLayout">
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bari"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:textColor="#777777"/>

    <TextView
        android:id="@+id/textViewWageAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="Rp 120"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="55dp"
        android:textColor="#777777"/>

    <TextView
        android:id="@+id/textViewWageType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="per day"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_below="@+id/textViewWageAmount"
        android:layout_marginTop="15dp"
        android:textColor="#777777"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaizen"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dp"
        android:textColor="#777777"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/loc"/>

    <TextView
        android:id="@+id/textViewStreet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="888 6-7"
        android:textSize="13sp"
        android:layout_below="@+id/textView3"
        android:textColor="#777777"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewStreet"
        android:src="@drawable/locman"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textViewStreet"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:text="Location Manager"
        android:textColor="#777777"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView5"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/textViewStreet"
        android:textSize="13sp"
        android:text="Yai"
        android:textColor="#777777"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:src="@drawable/contact"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="12dp"
        android:textSize="13sp"
        android:text="Contact Number"
        android:textColor="#777777"/>

    <TextView
        android:id="@+id/textViewContactNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+66"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignBaseline="@+id/textView7"
        android:textSize="13sp"
        android:layout_marginTop="3dp"
        android:textColor="#777777"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clock in"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView7"
        android:textSize="13sp"
        android:textColor="#777777"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_below="@+id/textViewContactNumber"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@+id/textViewContactNumber"
        android:text="Clock out"
        android:textSize="13sp"
        android:textColor="#777777"/>

    <TextView
        android:id="@+id/textViewClockIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:text="-"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/textViewClockOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textViewClockIn"
        android:layout_below="@+id/textView10"
        android:text="-"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignLeft="@+id/textView10" />

    <Button
        android:id="@+id/btnClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewClockOut"
        android:layout_marginTop="30dp"
        android:background="@drawable/oval"
        android:text="Clock In"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#777777"/>

</RelativeLayout>